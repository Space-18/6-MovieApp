@model MovieAppViewModel
@{
    ViewBag.Title = "Editar una Pelicula";
}
<div>
    <h4>Editar una Pelicula</h4>
    <div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Nombre">Nombre</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="Nombre" placeholder="Ingrese el nombre">
                <span asp-validation-for="Nombre" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Genero">Genero</label>
                <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Genero" placeholder="Ingrese el genero">
                <span asp-validation-for="Genero" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a asp-controller="App" asp-action="Index" class="btn btn-secondary">Regresar</a>
        </form>
    </div>
</div>

